{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "strict": true,
    "sourceMap": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@lib/*": ["src/lib/*"],
      "@db/*": ["src/db/*"],
      "@modules/*": ["src/modules/*"],
      "#grpc/*": ["src/grpc/*"]
    }
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
